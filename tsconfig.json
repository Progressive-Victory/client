{
	"compilerOptions": {
	  "target": "ESNext",
	  "module": "commonjs",
	  "outDir": "dist",
	  "strict": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true,
	  "noImplicitAny": false,
	  "noImplicitThis": false,
	  "declaration": true,
	  "experimentalDecorators": true,
	  "emitDecoratorMetadata": true
	},
	"include": ["src/**/*"]
  }
